@{
    ViewData["Title"] = "Adicionar Aluno";
}
@model Aluno
<form asp-controller="Aluno" asp-action="InserirAluno" method="post">
    <div class="mb-3 col-md-6">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="Nome">
    </div>
    <div class="mb-3 col-md-6">
        <label  class="form-label">Idade</label>
        <input type="text" class="form-control" asp-for="Idade">
    </div>
    <div class="mb-3 col-md-6">
        <label  class="form-label">Cpf</label>
        <input type="text" class="form-control" asp-for="Cpf">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar Aluno</button>
</form>
