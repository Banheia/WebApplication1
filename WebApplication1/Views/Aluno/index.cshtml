
@{
    ViewData["Title"] = "index";
}

<h1>Alunos</h1>
@model List<Aluno>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Cpf</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Aluno aluno in Model)
            {
                <tr>
                    <td class="col-md-4">@aluno.Nome </td>
                    <td class="col-md-1">@aluno.Idade </td>
                    <td class="col-md-3">@aluno.Cpf </td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                        <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                        </div>
                    </td>
                    <td>
                    <div class="d-grid gap-2 d-md-block">
                        <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="RemoverAluno" asp-route-id="@aluno.Id">Remover</a>
                    </div>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="AdicionarAluno"> Adicionar Aluno</a>
</div>
