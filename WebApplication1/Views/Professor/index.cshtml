
@{
    ViewData["Title"] = "index";
}

<h1>index</h1>
@model List<Professor>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Cpf</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Professor professor in Model)
            {
                <tr>
                    <td>@professor.Nome </td>
                    <td>@professor.Materia </td>
                    <td>@professor.Cpf </td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                        <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@professor.Id">Editar</a>
                        </div>
                    </td>
                    <td>
                    <div class="d-grid gap-2 d-md-block">
                        <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="RemoverAluno" asp-route-id="@professor.Id">Remover</a>
                    </div>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="AdicionarAluno"> Adicionar Aluno</a>
</div>
